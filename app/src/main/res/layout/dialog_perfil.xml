<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="225dp">

        <View
            android:id="@+id/view_primary"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimary" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/perfil_imagem"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/shape_redondo"
            android:padding="10dp"
            android:src="@drawable/default_user"
            app:layout_anchor="@id/view_primary"
            app:layout_anchorGravity="bottom|center"/>

    </android.support.design.widget.CoordinatorLayout>

    <TextView
        android:id="@+id/perfil_nome"
        android:text="Marcelo Prochnow"
        android:fontFamily="monospace"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/perfil_formacao"
        android:text="Educador Físico \n Especialização em hipertrofia muscular"
        android:gravity="center"
        android:fontFamily="monospace"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/cinza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>